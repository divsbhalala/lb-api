{
  "name": "user",
  "base": "User",
  "strict": false,
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "hidden": [
    "password",
    "credentials",
    "challenges",
    "realm",
    "emailVerified"
  ],
  "properties": {
    "firstName": {
      "type": "string",
      "required": true,
      "index": true
    },
    "lastName": {
      "type": "string",
      "required": true,
      "index": true
    },
    "email": {
      "type": "string",
      "required": true,
      "index": true
    },
    "password": {
      "type": "string",
      "required": true
    },
    "vip": {
      "type": "boolean",
      "default": false
    },
    "createdAt": {
      "type": "date"
    },
    "updatedAt": {
      "type": "date"
    },
    "deletedAt": {
      "type": "date"
    }
  },
  "validations": [],
  "relations": {
    "roles": {
      "type": "belongsTo",
      "model": "Role",
      "foreignKey": "principalId",
      "through": "RoleMapping"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$unauthenticated",
      "permission": "ALLOW",
      "property": "resendUsersVerificationMail"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$unauthenticated",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "getCurrentUser"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "resetUserPassword"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "changeUserPassword"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": [
        "admin"
      ],
      "permission": "ALLOW",
      "property": "getCurrentUser"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": [
        "admin"
      ],
      "permission": "ALLOW",
      "property": "getRole"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": [
        "getUserByUserName",
        "isUserNameExists",
        "isEmailExists"
      ]
    }
  ],
  "methods": {},
  "mixins": {
    "SoftDelete" : true
  }
}
